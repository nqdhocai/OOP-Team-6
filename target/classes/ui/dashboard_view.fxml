<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardPane" prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
      <VBox id="page-view" prefHeight="500.0" prefWidth="650.0" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane id="view-title" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Label alignment="CENTER" layoutY="1.0" prefHeight="50.0" prefWidth="120.0" text="Dashboard">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <HBox prefHeight="450.0" prefWidth="500.0">
               <children>
                  <VBox prefHeight="350.0" prefWidth="700.0">
                     <children>
                        <HBox prefHeight="60.0" prefWidth="500.0" style="-fx-alignment: center;">
                           <children>
                              <VBox id="total-container" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label id="total-user-label" fx:id="totalUserLabel" prefHeight="30.0" prefWidth="100.0" style="-fx-alignment: center;" text="2000" textAlignment="CENTER" textFill="#55aded">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                    <Label prefHeight="30.0" prefWidth="100.0" style="-fx-alignment: center;" text="TOTAL USER" textAlignment="CENTER" />
                                 </children>
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </VBox>
                              <VBox id="total-container" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label id="total-tweet-label" fx:id="totalTweetLabel" prefHeight="30.0" prefWidth="100.0" style="-fx-alignment: center;" text="2000" textAlignment="CENTER" textFill="#55aded">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                    <Label prefHeight="30.0" prefWidth="100.0" style="-fx-alignment: center;" text="TOTAL TWEET" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        <VBox.margin>
                           <Insets bottom="5.0" />
                        </VBox.margin>
                        </HBox>
                        <HBox prefHeight="400.0" prefWidth="500.0">
                           <children>
                           <AnchorPane id="user-list" prefHeight="300.0" prefWidth="250.0" fx:id="userRankingPane" />
                              <AnchorPane id="graph-pane" prefHeight="300.0" prefWidth="400.0" fx:id="graphViewPane">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </AnchorPane>
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
</AnchorPane>
